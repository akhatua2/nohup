{
  "manifest_version": 3,
  "name": "Floating Toolbar",
  "version": "1.0",
  "description": "A draggable floating toolbar for Chrome",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": [
        "src/styles/styles.css",
        "src/components/comment/comment.css"
      ],
      "js": [
        "src/utils/icons.js",
        "src/utils/drag.js",
        "src/utils/menu-utils.js",
        "src/components/comment/component-marker.js",
        "src/components/comment/anchor.js",
        "src/components/comment/comment.js",
        "src/components/menu/menu.js",
        "src/content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
} 