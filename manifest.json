{
  "manifest_version": 3,
  "name": "Floating Toolbar",
  "version": "1.0",
  "description": "A draggable floating toolbar for Chrome",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["styles.css", "comment/comment.css"],
      "js": [
        "icons.js",
        "drag.js",
        "menu-utils.js",
        "comment/component-marker.js",
        "comment/anchor.js",
        "comment/comment.js",
        "menu.js",
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
} 